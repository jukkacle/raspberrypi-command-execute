<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_edit_window"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#444444"
    android:orientation="vertical"
    android:padding="10sp" >

    <TextView android:id="@+id/txtView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5sp" android:text="Choose action..." />

    <Button android:id="@+id/btn_popup_edit"    android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="Edit"   />
    <Button android:id="@+id/btn_popup_delete"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="Delete" />
    <Button android:id="@+id/btn_popup_copy"    android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="Copy"   />
    <Button android:id="@+id/btn_popup_cancel"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="Cancel" />

</LinearLayout>
