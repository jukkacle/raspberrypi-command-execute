<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/popup_command_edit_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*" 
    android:stretchColumns="*" 
	android:padding="5dp"
    android:background="#708090">
    <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center_horizontal">          
		<TextView android:id="@+id/txtView"            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5sp"  android:text="Add/Edit Command..." />
    </TableRow>
    
    <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center_horizontal">          
        <EditText android:id="@+id/command_name"       android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1"   android:gravity="center" android:hint="Command Name" />
    </TableRow>
    <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center_horizontal">          
        <Spinner android:id="@+id/server_profile_spinner" android:layout_width="0dp" android:layout_height="40dp" android:hint="Server Profile" />
    </TableRow>
    <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center_horizontal">          
        <EditText android:id="@+id/shell_script_path"  android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1"   android:gravity="center" android:hint="Shell Script Path" />
    </TableRow>
    <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center_horizontal">          
        <Button android:id="@+id/command_save_button"       android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:gravity="center" android:text="Save"     />
    </TableRow>
    <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center_horizontal">          
        <Button android:id="@+id/command_cancel_button"     android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:gravity="center" android:text="Cancel"   />
    </TableRow>
</TableLayout>
